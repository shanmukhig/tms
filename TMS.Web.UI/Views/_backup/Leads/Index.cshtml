</script>

<nav>
  <div class=" container container-fluid" style="margin-left: 5px;">
    <div class="row">
      <div class="col-md-2 col-sm-2 col-xs-3" style="padding-left: 2px;padding-right: 2px;">
        <div class="list-group">
          <a href="#" class="list-group-item active">Home</a>
          <div class="list-group-item">
            List header
          </div>
          <div class="list-group-item">
            <h4 class="list-group-item-heading">
              List group item heading
            </h4>
            <p class="list-group-item-text">
              ...
            </p>
          </div>
          <div class="list-group-item">
            <span class="badge">14</span>Help
          </div> <a class="list-group-item active"><span class="badge">14</span>Help</a>
        </div>
      </div>
      <div class="col-md-8 col-sm-6 col-xs-9" style="padding-left: 2px;padding-right: 2px;">
        <div class="navbar container container-fluid" style="margin-bottom: 5px;padding: 0">
          <div class="col-md-3 col-sm-3 col-xs-5">
            <div class="btn-group" style="padding-top: 6px;">
              <button class="btn btn-default" type="button" id="btnNewLead" onclick=""><b class="glyphicon glyphicon-user"></b>&nbsp;New Lead</button>
              <button class="btn btn-default" type="button" id="btnDeleteLead"><b class="glyphicon glyphicon-remove"></b>&nbsp;Remove Lead</button>
            </div>
          </div>
          @*<div class="navbar-form" role="search">*@
            <div class="input-group col-md-4">
              <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          @*</div>*@
          <div class="col-md-3 pull-right">
            <div class="btn-group" style="padding-top: 6px;">
              <button class="btn btn-default" type="button"><b class="glyphicon glyphicon-print"></b>&nbsp;Print</button>
              <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                  <b class="glyphicon glyphicon-export"></b>&nbsp;
                  Export <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#"><b class="glyphicon-pro glyphicon-pro-excel"></b>&nbsp;Excel</a></li>
                  <li><a href="#"><b class="glyphicon glyphicon-pro-doc"></b>&nbsp;Word</a></li>
                  <li class="divider"></li>
                  <li><a href="#"><b class="glyphicon-pro glyphicon-pro-pdf"></b>&nbsp;Pdf</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <nav class="navbar container container-fluid" style="padding: 10px;padding-bottom: 0;">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>
                  @Html.CheckBox("chkSelectAll")
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.FirstName)
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.LastName)
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.LeadSource)
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.LeadType)
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.ServiceRequired)
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.Status)
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.AmountQuoted)
                </th>
                <th>
                  @Html.DisplayNameFor(l => l.ExpectedDateOfJoin)
                </th>
              </tr>
            </thead>
            @foreach (Lead lead in ViewBag.Leads)
            {
            <tr>
              <td>@Html.CheckBox("lblSelect", new { lead.Id })</td>
              <td>@lead.FirstName</td>
              <td>@lead.LastName</td>
              <td>@lead.LeadSource</td>
              <td>@lead.LeadType</td>
              <td>@lead.ServiceRequired</td>
              <td>@lead.Status</td>
              <td>@lead.AmountQuoted</td>
              <td>@lead.ExpectedDateOfJoin</td>
            </tr>
            }
          </table>
        </nav>
      </div>
    </div>
  </div>
</nav>