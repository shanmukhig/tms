@model dynamic

@{
  Layout = string.Empty;
}

@using (Html.BeginForm("Index", "BestTimeToContact", FormMethod.Get, new { @id = "bestTimetoContactForm" }))
{
  <div class="modal fade" id="bt" tabindex="-1" role="dialog" aria-labelledby="titleBTTC" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="titleBTTC">Best Time to Contact</h4>
        </div>
        <div class="modal-body">
          <div class='row input-group date' id="datetimepicker5">
            <input type="text" class="form-control" readonly="readonly" id="BestTimeToContact" name="BestTimeToContact" />
            <span class="input-group-addon btn-outline btn-primary"><i class="glyphicon glyphicon-calendar"></i></span>
          </div>
        </div>
        <div class="modal-footer">
          <span class="btn btn-outline btn-primary" id="BestTimeSave"><i class="glyphicon glyphicon-check"></i></span>
        </div>
      </div>
    </div>
  </div>
}
